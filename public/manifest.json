{
  "manifest_version": 2,
  "name": "My Extension",
  "description": "This extension is a starting point to create a real Chrome extension",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' 'sha256-3kJrP+OsrgwTBa8zwPDox64Cf61+yyiE/0FQ+chgdpU='; object-src 'self'",
  "permissions": [
    "tabs"
  ]
}